{
  "kind": "collectionType",
  "collectionName": "mood_categories",
  "info": {
    "singularName": "mood-category",
    "pluralName": "mood-categories",
    "displayName": "Mood category",
    "description": "Category used to qualify the reason behind a mood"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "categoryType": {
      "type": "enumeration",
      "enum": ["personal", "professional", "wellbeing", "other"],
      "default": "other",
      "required": true
    },
    "icon": {
      "type": "string"
    },
    "isDefault": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
